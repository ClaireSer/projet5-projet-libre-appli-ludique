{% extends "GameBundle::layout.html.twig" %}
{% set game = true %}

{% block title %}{{ parent() }} - {{ titleTab }}{% endblock %}

{% block body %}
<div class="container-fluid play">

    {% for message in app.session.flashbag.get('notice') %}
