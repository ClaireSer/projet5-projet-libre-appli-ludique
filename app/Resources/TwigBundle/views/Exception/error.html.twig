{% extends 'base.html.twig' %}

{% block title %}Erreur en vue !{% endblock %}

{% block body %}

    <div class="messageOie">
        <h2>Oups ! Vous êtes tombé sur la case erreur {{ status_code }} !</h2>
        {% if status_code == 404 %}
        <h3>La page n'a pas été trouvée : retournez à la case départ !</h3>
        {% endif %}
    </div>

    <img src="{{ asset('GameBundle/images/oie.png') }}" alt="une oie" />

{% endblock %}
